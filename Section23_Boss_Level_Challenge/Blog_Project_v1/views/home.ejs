<%- include('partials/header'); -%>

  <h1>Home</h1>
  <p><%= homeContent %></p>

  <%# console.log(posts); %>
  <% posts.forEach(function (post) { %>
      <div class="container">
        <h2><%= post.title %></h2>
        <!-- Truncate string in JS : Use ".substring(0, length)" -->
        <p>
          <%= post.content.substring(0, 100)%>
          <a href="/posts/<%= post.title %>">... Read More</a>
        </p>
      </div>
  <% }); %>

<%- include('partials/footer'); -%>
